<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="24" styleClass="root-center" stylesheets="@home.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Grafica.PreferenzeController">

    <children>
        <!-- CARD preferenze -->
        <VBox spacing="16" styleClass="card">
            <children>

                <Label styleClass="card-title" text="Preferenze" />

                <!-- Età -->
                <VBox spacing="4">
                    <children>
                        <Label styleClass="hint-label" text="Età (preferenza)" />
                        <HBox spacing="10">
                            <children>
                                <RadioButton fx:id="rbUnder30" text="Under 30" />
                                <RadioButton fx:id="rbOver60" text="Over 60" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Piano -->
                <VBox spacing="4">
                    <children>
                        <Label styleClass="hint-label" text="Piano preferito" />
                        <HBox spacing="10">
                            <children>
                                <RadioButton fx:id="rbPianoTerra" text="Piano terra" />
                                <RadioButton fx:id="rbAltriPiani" text="Altri piani" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Distanza dall'uscita -->
                <VBox spacing="4">
                    <children>
                        <Label styleClass="hint-label" text="Distanza massima dall'uscita (metri)" />
                        <Slider fx:id="sliderDistanza" blockIncrement="5" majorTickUnit="25" max="100" min="0" minorTickCount="4" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="30" />
                    </children>
                </VBox>

                <!-- Disabile / Donna incinta -->
                <VBox spacing="4">
                    <children>
                        <Label styleClass="hint-label" text="Condizioni speciali" />
                        <HBox spacing="16">
                            <children>
                                <CheckBox fx:id="cbDisabile" text="Posto per disabile" />
                                <CheckBox fx:id="cbDonnaIncinta" text="Donna incinta" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Tipologia di occupazione -->
                <VBox spacing="4">
                    <children>
                        <Label styleClass="hint-label" text="Tipologia di occupazione" />
                        <ChoiceBox fx:id="choiceOccupazione" />
                    </children>
                </VBox>

                <!-- Pulsanti azione -->
                <ButtonBar buttonMinWidth="90">
                    <buttons>
                        <Button onAction="#onAnnulla" styleClass="secondary-button" text="Annulla" ButtonBar.buttonData="CANCEL_CLOSE" />
                        <Button onAction="#onSalva" styleClass="primary-button" text="Salva" ButtonBar.buttonData="OK_DONE" />
                    </buttons>
                </ButtonBar>

            </children>
        </VBox>
    </children>

</VBox>
