<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Grafica.SchermataUtenteController"
            stylesheets="@home.css">

    <center>
        <VBox alignment="CENTER" spacing="24" styleClass="root-center">
            <children>
                <!-- CARD centrale in stile Home -->
                <VBox alignment="CENTER" spacing="20" styleClass="card">
                    <children>
                        <Label text="Area Utente"
                               styleClass="card-title" />

                        <!-- Qui potrai aggiungere altri controlli utente -->

                        <Button text="Logout"
                                onAction="#onBack"
                                styleClass="primary-button" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>

</BorderPane>
